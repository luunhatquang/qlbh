extends ../../layout/default.pug

include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert-status.pug
include ../../mixins/sort.pug

block main
  h1 Danh mục sản phẩm

  //- Thông báo
  +alert-suc("5000")

  //- Bộ lọc & tìm kiếm
  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6
          +search(keyword)

  //- Sắp xếp
  .card.mb-3
    .card-body
      .row
        .col-4
          +sort()

  //- Danh sách sản phẩm
  .card.mb-3
    .card-header
      .row
        .col-8 Danh mục sản phẩm
        .col-4.text-right
          a.btn.btn-outline-success(
            href=`${prefixAdmin}/product-categories/create`
          ) + Thêm mới

    .card-body
      table.table.table-hover.table-sm(checkbox-multi)
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động
        tbody
          each record, index in records
            tr
              td
                input(type="checkbox" name="id" value=record._id)
              td #{index + 1}
              td
                img(
                  src=record.thumbnail
                  alt=record.title
                  width="100px"
                  height="auto"
                )
              td #{record.title}
              td
                input(
                  type="number"
                  value=record.position
                  style="width: 60px"
                  min="1"
                  name="position"
                )
              td
                if record.status == "active"
                  a.badge.badge-success(
                    href="javascript:;"
                    data-status=record.status
                    data-id=record._id
                    button-change-status
                  ) Hoạt động
                else
                  a.badge.badge-danger(
                    href="javascript:;"
                    data-status=record.status
                    data-id=record._id
                    button-change-status
                  ) Dừng hoạt động
              td
                a.btn.btn-info.btn-sm.mr-1(
                  href=`${prefixAdmin}/product-categories/detail/${record._id}`
                ) Chi tiết
                a.btn.btn-warning.btn-sm(
                  href=`${prefixAdmin}/product-categories/edit/${record._id}`
                ) Sửa
                button.btn.btn-danger.btn-sm.ml-1(
                  button-delete
                  data-id=record._id
                ) Xóa