extends ../../layout/default.pug

include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert-status.pug
include ../../mixins/sort.pug
include ../../mixins/render_category.pug 
include ../../mixins/pagination.pug

block main
  h1 Danh mục sản phẩm

  +alert-suc("5000")

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6
          +search(keyword)

  .card.mb-3
    .card-body
      .row
        .col-4
          +sort()

  .card.mb-3
    .card-header
      .row
        .col-8 Danh mục sản phẩm
        .col-4.text-right
          a.btn.btn-outline-success(
            href=`${prefixAdmin}/product-categories/create`
          ) + Thêm mới

    .card-body
      table.table.table-hover.table-sm(checkbox-multi)
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động
        tbody
          if records && records.length
            +render-category(records, "")
          else
            tr
              td(colspan="7" class="text-center text-muted") Không có danh mục nào