mixin render-category(records, prefix)
  each record, index in records
    tr
      td
        input(type="checkbox" name="id" value=record._id)
      td #{index + 1}
      td
        img(
          src=record.thumbnail
          alt=record.title
          width="100px"
          height="auto"
        )
      td #{prefix}#{record.title}
      td
        input(
          type="number"
          value=record.position
          style="width: 60px"
          min="1"
          name="position"
        )
      td
        if record.status == "active"
          a.badge.badge-success(
            href="javascript:;"
            data-status=record.status
            data-id=record._id
            button-change-status
          ) Hoạt động
        else
          a.badge.badge-danger(
            href="javascript:;"
            data-status=record.status
            data-id=record._id
            button-change-status
          ) Dừng hoạt động
      td
        a.btn.btn-info.btn-sm.mr-1(
          href=`${prefixAdmin}/product-categories/detail/${record._id}`
        ) Chi tiết
        a.btn.btn-warning.btn-sm(
          href=`${prefixAdmin}/product-categories/edit/${record._id}`
        ) Sửa
        button.btn.btn-danger.btn-sm.ml-1(
          button-delete
          data-id=record._id
        ) Xóa

    //- nếu có con thì đệ quy xuống
    if record.children
      +render-category(record.children, `${prefix}-- `)